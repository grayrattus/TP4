<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DataGrid x:Name="myGrid" x:FieldModifier="public" AutoGenerateColumns="False" ColumnWidth="*">
        <DataGrid.Columns>
            <DataGridTextColumn x:Name="Id" Binding="{Binding id}" Header="Name" Width="SizeToHeader"/>
            <DataGridTextColumn x:Name="FirstName" Binding="{Binding FirstName}" Header="FirstName" Width="SizeToHeader"/>
            <DataGridTextColumn x:Name="LastName" Binding="{Binding LastName}" Header="LastName" Width="SizeToHeader"/>
            <DataGridTextColumn x:Name="CardNumber" Binding="{Binding CardNumber}" Header="CardNumber" Width="SizeToHeader"/>
        </DataGrid.Columns>
    </DataGrid>
</Window>
